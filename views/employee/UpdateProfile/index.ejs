<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update Profile</title>
</head>
<body>
    <fieldset>
        <legend>Update Employee</legend>
        <h1>Profile Picture Upload here!</h1>
        <form method="POST" name="myForm">
            <input type="file" name="file"><input type="submit" name="upload" value="Upload">
            <p>Username</p>
            <input style="height: 3%;" name="username" type="text" value="<%= list[0].username%>" readonly>
            <p>Password</p>
            <input style="height: 3%;" name="password" id="password" type="password" value="<%= list[0].password%>">
            <% if(error.password) {%>
                <p style="color: red;"><%=error.password.msg %> </p>
            <% } %>
            <p>Name</p>
            <input style="height: 3%;" name="name" type="text" value="<%= list[0].name%>">
            <% if(error.name) {%>
                <p style="color: red;"><%=error.name.msg %> </p>
            <% } %>
            <p>Gender</p>
            <input style="height: 3%;" name="gender" type="text" value="<%= list[0].gender%>">
            <% if(error.gender) {%>
                <p style="color: red;"><%=error.gender.msg %> </p>
            <% } %>
            <p>Phone</p>
            <input style="height: 3%;" name="phone" type="text" value="<%= list[0].phone%>">
            <% if(error.phone) {%>
                <p style="color: red;"><%=error.phone.msg %> </p>
            <% } %>
            <p>Designation</p>
            <input style="height: 3%;" name="designation" type="text" value="<%= list[0].designation%>">
            <% if(error.designation) {%>
                <p style="color: red;"><%=error.designation.msg %> </p>
            <% } %> <br>
            <input style="height: 3%;" type="Submit" name="update"><br>
        </form>
        <a href="/logout">Logout</a>
    </fieldset>
</body>
</html>